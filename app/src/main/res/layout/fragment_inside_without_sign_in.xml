<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:weightSum="8"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:textStyle="bold"
                android:id="@+id/trending"
                android:drawableRight="@drawable/ic_slow_motion_video_black_24dp"
                android:background="@color/colorPrimaryDark"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Trending"
                />

            <Button
                android:layout_marginLeft="1dp"
                android:paddingRight="12dp"
                android:id="@+id/free"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:drawableRight="@drawable/ic_open_book"
                android:text="Free"
                />
            <Button
                android:layout_marginLeft="1dp"
                android:id="@+id/latest"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:drawableRight="@drawable/ic_slow_motion_video_black_24dp"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Latest"
                />
            <Button
                android:layout_marginLeft="1dp"
                android:id="@+id/premium"
                android:drawableRight="@drawable/ic_open_book"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:paddingRight="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="Premium"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/trending_card"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:weightSum="13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:visibility="invisible"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/arrow_t_l"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                            />


                        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                            android:elevation="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/trending_rv"
                            android:orientation="horizontal"
                            />

                        <ImageView
                            android:id="@+id/arrow_t_r"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                app:cardElevation="5dp"
                android:id="@+id/latest_card"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:weightSum="13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/arrow_l_l"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                            />


                        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/latest_rv"
                            />


                        <ImageView
                            android:id="@+id/arrow_l_r"
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardElevation="10dp"
                android:id="@+id/free_card"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:weightSum="13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:visibility="invisible"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/arrow_f_l"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                            />


                        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/free_course_rv"
                            />

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/arrow_f_r"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"
                            />


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/premium_card"
                android:visibility="invisible"
                app:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:weightSum="13"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/arrow_p_l"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                            />


                        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/paid_courses_rv"
                            />

                        <ImageView
                            android:id="@+id/arrow_p_r"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"            />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>