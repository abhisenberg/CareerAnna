<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!--

            <android.support.v4.view.ViewPager
                android:id="@+id/intro_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/intro_dots"
                />
    -->

    <view
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:id="@+id/view"
        app:layout_constraintHeight_percent="0.1"
        />

    <include layout="@layout/intro_slider_2"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_height="0dp"
        android:id="@+id/intro_view"
        app:layout_constraintHeight_percent="0.7"
        android:layout_width="match_parent"
        />

    <LinearLayout
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/intro_view"
        android:id="@+id/intro_dots"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </LinearLayout>

    <Button
        android:text="Sign in"
        android:id="@+id/signIn"
        android:textColor="#FFF"
        android:background="@drawable/button_signin"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="250dp"
        app:layout_constraintTop_toBottomOf="@id/intro_dots"
        android:layout_height="40dp" />


    <Button
        android:text="Explore"
        android:letterSpacing="0.05"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:id="@+id/bt_explore"
        android:textColor="#616060"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

</android.support.constraint.ConstraintLayout>