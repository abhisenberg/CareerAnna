<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragement.profile_fragements.CertificateFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Complete The Course And Give Test To Unlock Your Certificate."
        />
    <android.support.design.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Complete The Course And Give Test To Unlock Your Certificate."
                />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Download Certificate"
                android:drawablePadding="20dp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_lock_white_24dp"
                />

        </LinearLayout>

    </android.support.design.card.MaterialCardView>


</FrameLayout>
