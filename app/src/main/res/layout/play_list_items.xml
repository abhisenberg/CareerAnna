<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="20sp"
        android:text="Watch Later"
        android:textColor="@color/black"
        android:id="@+id/play_list_name"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/items_count"
        android:layout_height="wrap_content" />
    
    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="0"
        android:layout_toLeftOf="@id/showList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/items_count"
        />

     <Button
         android:id="@+id/showList"
         android:layout_width="30dp"
         android:background="@android:color/transparent"
         android:layout_height="20dp"
         android:layout_alignParentRight="true"
         android:drawableLeft="@drawable/ic_arrow_drop_down_blue_24dp"
         />

      <android.support.v7.widget.RecyclerView
          android:layout_marginTop="5dp"
          android:visibility="gone"
          android:id="@+id/videos_rv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/play_list_name"
          />

    </RelativeLayout>
    
</android.support.v7.widget.CardView>