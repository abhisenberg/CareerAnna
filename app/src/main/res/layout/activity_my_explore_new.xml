<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                >

                <TextView
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trending Videos"
                    android:textSize="18sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="12dp"
                    android:gravity="left"
                    />

            </android.support.design.card.MaterialCardView>

            <LinearLayout
                android:weightSum="13"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

            <ImageView
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:id="@+id/arrow_t_l"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                />


                <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="wrap_content"
                    android:id="@+id/trending_rv"
                    android:orientation="horizontal"
                    />

            <ImageView
                android:id="@+id/arrow_t_r"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardElevation="5dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    >

                    <TextView
                        android:background="@color/colorPrimary"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Latest Videos"
                        android:textSize="18sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="12dp"
                        android:gravity="left"
                        />

                </android.support.design.card.MaterialCardView>

                <LinearLayout
                    android:weightSum="13"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/arrow_l_l"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                    />


                    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content"
                        android:id="@+id/latest_rv"
                        />


                <ImageView
                    android:id="@+id/arrow_l_r"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"
                    />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            >

            <TextView
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Course"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="12dp"
                android:gravity="left"
                />

        </android.support.design.card.MaterialCardView>


        <LinearLayout
            android:weightSum="13"
            android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="invisible"
        android:layout_gravity="center_vertical"
        android:id="@+id/arrow_f_l"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
        />


            <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:id="@+id/free_course_rv"
                />

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/arrow_f_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"
        />


</LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            >

            <TextView
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paid Course"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="12dp"
                android:gravity="left"
                />

        </android.support.design.card.MaterialCardView>

        <LinearLayout
        android:weightSum="13"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:visibility="invisible"
            android:id="@+id/arrow_p_l"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
            />


        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:id="@+id/paid_courses_rv"
            />

        <ImageView
            android:id="@+id/arrow_p_r"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"            />


    </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>