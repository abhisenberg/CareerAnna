<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="8"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginLeft="1dp"
            android:textStyle="bold"
            android:id="@+id/trending"
            android:drawableRight="@drawable/ic_slow_motion_video_black_24dp"
            android:background="@color/colorPrimaryLight"
            android:paddingRight="3dp"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="@string/trending"
            />

        <Button
            android:layout_marginLeft="1dp"
            android:paddingRight="12dp"
            android:id="@+id/free"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:drawableRight="@drawable/ic_open_book"
            android:text="@string/free"
            />
        <Button
            android:layout_marginLeft="1dp"
            android:id="@+id/latest"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_slow_motion_video_black_24dp"
            android:layout_weight="2"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="@string/latest"
            />
        <Button
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/premium"
            android:drawableRight="@drawable/ic_lock_outline_white_24dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:paddingRight="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="@string/premium"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.SearchView
            android:textSize="14sp"
            android:paddingRight="10dp"
            app:iconifiedByDefault="false"
            android:focusable="false"
            app:queryHint="Search"
            android:gravity="center"
            android:layout_toLeftOf="@id/filterTrend"
            android:layout_width="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/searchTrend"
            android:layout_marginTop="10dp"
            android:layout_height="30dp" />

        <Button
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:id="@+id/filterTrend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Filter"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:background="@drawable/border_curved_1"
            android:drawableLeft="@drawable/ic_filter_list_black_24dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/trending_card"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:weightSum="13"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/arrow_t_l"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                />


                <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                    android:elevation="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/trending_rv"
                    android:orientation="horizontal"
                    />

            <ImageView
                android:id="@+id/arrow_t_r"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardElevation="5dp"
            android:id="@+id/latest_card"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/arrow_l_l"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                    />


                    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:id="@+id/latest_rv"
                        />


                <ImageView
                    android:id="@+id/arrow_l_r"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"
                    />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:id="@+id/free_card"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:weightSum="13"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/arrow_f_l"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
        />


            <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/free_course_rv"
                />

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/arrow_f_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"
        />


</LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/premium_card"
        android:visibility="invisible"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
        android:weightSum="13"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/arrow_p_l"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
            />


        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:id="@+id/paid_courses_rv"
            />

        <ImageView
            android:id="@+id/arrow_p_r"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"            />


    </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/no_record_card"
        android:elevation="20dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_no_video"
                android:layout_centerInParent="true"
                android:id="@+id/no_search"
                />

            <TextView
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/no_search"
                android:gravity="center"
                android:text="@string/no_record_found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>