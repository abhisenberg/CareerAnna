<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/intro_pic_1"
            />

        <TextView
            android:id="@+id/article_name"
            android:text="Article Heading"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="2dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/article_author_image"
                    android:src="@drawable/ic_person_color"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/article_author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Author Name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_calendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />

                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:id="@+id/article_created_date"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Article Date"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <com.careeranna.careeranna.misc.TextViewEx
            android:id="@+id/article_content"
            android:text="@string/sample_article_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>