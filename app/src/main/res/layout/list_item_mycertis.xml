<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_certiName"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:hint="Python Web Dev Course"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/cert_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_certiDate"
                android:text="10 Oct 2018"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_certiDownload"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:text="@string/cert_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_certiImage"
        android:src="@drawable/ic_launcher_background"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


</LinearLayout>