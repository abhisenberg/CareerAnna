<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:text="Word List"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/course_video_title"
                />


        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/rounded_edge"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="190dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:elevation="10dp"
                android:background="@drawable/gradient_image"
                />

            <ImageView
                android:background="@drawable/rounded_edge"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:id="@+id/course_video_image"
                />
            
            <ImageView
                android:elevation="20dp"
                android:layout_width="50dp"
                android:src="@drawable/play_button"
                android:layout_centerInParent="true"
                android:layout_height="50dp"
                />

            <android.support.constraint.ConstraintLayout
                android:elevation="20dp"
                android:background="#343434"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="16,0614 Views"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="15sp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:elevation="20dp"
                    android:paddingRight="6dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:id="@+id/course_video_views"
                    />

                <TextView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="7:39"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:elevation="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:id="@+id/course_video_duration"
                    />
            </android.support.constraint.ConstraintLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="2,745"
                android:gravity="center_vertical"
                android:id="@+id/course_videos_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_thumbs_up_hand_symbol"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/share"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Share"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_share"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <TextView
            android:text="View all 1 comments"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/total_comment"
            />

    <TextView
        android:textColor="#2196F3"
        android:text="Add Comments"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/add_comment"
        android:layout_marginBottom="12dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#D8D5D3D3" />


</LinearLayout>