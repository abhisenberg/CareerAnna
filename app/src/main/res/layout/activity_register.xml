<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_screen_background_color"
    android:id="@+id/snackbar_rv"
    tools:context=".user.Register">

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:hintTextAppearance="@color/register_screen_fields_color"
        app:boxStrokeColor="@color/register_screen_fields_color"
        android:outlineAmbientShadowColor="@color/register_screen_fields_color"
        app:boxBackgroundColor="@color/register_screen_fields_color"
        android:outlineSpotShadowColor="@color/register_screen_fields_color"
        android:textColorHint="@color/register_screen_fields_color"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/usernameTv1"
        app:errorEnabled="true" >

        <android.support.design.widget.TextInputEditText
            app:backgroundTint="@color/register_screen_fields_color"
            android:textColorHint="@color/register_screen_fields_color"
            android:textColor="@color/register_screen_fields_color"
            android:textColorHighlight="@color/register_screen_fields_color"

            android:inputType="text"
            android:drawableEnd="@drawable/ic_person_blue_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        app:hintTextAppearance="@color/register_screen_fields_color"
        app:boxStrokeColor="@color/register_screen_fields_color"
        android:outlineAmbientShadowColor="@color/register_screen_fields_color"
        app:boxBackgroundColor="@color/register_screen_fields_color"
        android:outlineSpotShadowColor="@color/register_screen_fields_color"
        android:textColorHint="@color/register_screen_fields_color"
        android:backgroundTint="@color/register_screen_fields_color"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/usernameTv1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/useremailTv1"
        app:errorEnabled="true" >

        <android.support.design.widget.TextInputEditText
            app:backgroundTint="@color/register_screen_fields_color"
            android:textColorHint="@color/register_screen_fields_color"
            android:textColor="@color/register_screen_fields_color"
            android:textColorHighlight="@color/register_screen_fields_color"
            android:backgroundTint="@color/register_screen_fields_color"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/ic_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail Address"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        app:hintTextAppearance="@color/register_screen_fields_color"
        app:boxStrokeColor="@color/register_screen_fields_color"
        android:outlineAmbientShadowColor="@color/register_screen_fields_color"
        app:boxBackgroundColor="@color/register_screen_fields_color"
        android:outlineSpotShadowColor="@color/register_screen_fields_color"
        android:textColorHint="@color/register_screen_fields_color"
        android:backgroundTint="@color/register_screen_fields_color"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/useremailTv1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/userpasswordTv1"
        app:passwordToggleTint="@color/register_screen_fields_color"
        app:errorEnabled="true" >

        <android.support.design.widget.TextInputEditText
            app:backgroundTint="@color/register_screen_fields_color"
            android:textColorHint="@color/register_screen_fields_color"
            android:textColor="@color/register_screen_fields_color"
            android:textColorHighlight="@color/register_screen_fields_color"
            app:passwordToggleTint="@color/register_screen_fields_color"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/user_fullPhone"
        android:layout_below="@id/userpasswordTv1"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hbb20.CountryCodePicker
            android:id="@+id/countryCodePicker"
            android:layout_gravity="center"
            app:ccp_textSize="14sp"
            app:ccp_contentColor="@color/register_screen_fields_color"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </com.hbb20.CountryCodePicker>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userphoneTv1"
            app:hintTextAppearance="@color/register_screen_fields_color"
            app:boxStrokeColor="@color/register_screen_fields_color"
            android:outlineAmbientShadowColor="@color/register_screen_fields_color"
            app:boxBackgroundColor="@color/register_screen_fields_color"
            android:outlineSpotShadowColor="@color/register_screen_fields_color"
            android:textColorHint="@color/register_screen_fields_color"
            android:backgroundTint="@color/register_screen_fields_color"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_below="@id/usernameTv1"
            app:errorEnabled="true" >

            <android.support.design.widget.TextInputEditText
                app:backgroundTint="@color/register_screen_fields_color"
                android:textColorHint="@color/register_screen_fields_color"
                android:textColor="@color/register_screen_fields_color"
                android:textColorHighlight="@color/register_screen_fields_color"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_phone_blue_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        app:hintTextAppearance="@color/register_screen_fields_color"
        app:boxStrokeColor="@color/register_screen_fields_color"
        android:outlineAmbientShadowColor="@color/register_screen_fields_color"
        app:boxBackgroundColor="@color/register_screen_fields_color"
        android:outlineSpotShadowColor="@color/register_screen_fields_color"
        android:textColorHint="@color/register_screen_fields_color"
        android:backgroundTint="@color/register_screen_fields_color"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/user_fullPhone"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/usercityTv1"
        app:errorEnabled="true" >

        <android.support.design.widget.TextInputEditText
            app:backgroundTint="@color/register_screen_fields_color"
            android:textColorHint="@color/register_screen_fields_color"
            android:textColor="@color/register_screen_fields_color"
            android:textColorHighlight="@color/register_screen_fields_color"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_location_on_red_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/usercityTv1"
        android:entries="@array/how_did"
        android:id="@+id/how_spinner"
        />

    <Button
        android:id="@+id/signUpBtn"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up As A Student"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_signin"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_above="@id/tv_tnc_text_signup"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_tnc_text_signup"
        android:textColor="@color/register_screen_fields_color"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="25dp"
        android:text="@string/terms"
        />

</RelativeLayout>