<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/select_preferred_language"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="250dp">

       <LinearLayout
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RadioGroup
               android:id="@+id/rg_language_group"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <RadioButton
                   android:id="@+id/rb_english"
                   android:layout_marginTop="5dp"
                   android:text="English"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_hindi"
                   android:text="Hindi"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_tamil"
                   android:text="Tamil"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_telugu"
                   android:text="Telugu"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </RadioGroup>

           <TextView
               android:layout_marginTop="10dp"
               android:text="@string/languages_coming_soon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <RadioGroup
               android:id="@+id/rg_language_group_coming_soon"
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <RadioButton
                   android:id="@+id/rb_bengali"
                   android:enabled="false"
                   android:text="Bengali"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_marathi"
                   android:text="Marathi"
                   android:enabled="false"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_kannada"
                   android:text="Kannada"
                   android:enabled="false"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_gujarati"
                   android:text="Gujarati"
                   android:enabled="false"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_malayalam"
                   android:text="Malayalam"
                   android:enabled="false"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RadioButton
                   android:id="@+id/rb_punjabi"
                   android:text="Punjabi"
                   android:enabled="false"
                   android:layout_marginTop="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </RadioGroup>

       </LinearLayout>

   </ScrollView>

