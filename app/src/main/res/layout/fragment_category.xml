<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragement.dashboard_fragements.CategoryFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:id="@+id/progress"
            />


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            >

            <android.support.v7.widget.SearchView
                android:textSize="14sp"
                android:paddingRight="10dp"
                app:iconifiedByDefault="false"
                app:queryHint="Search Your Course"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/filterSub"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/search"
                android:layout_marginTop="10dp"
                android:layout_height="30dp" />

            <Button
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:text="Sort By"
                android:id="@+id/sort"
                android:textSize="12sp"
                android:paddingLeft="40dp"
                android:drawableLeft="@drawable/ic_sort_by_attributes"
                android:background="@drawable/border"
                />

            <Button
                android:textColor="@color/colorPrimary"
                android:id="@+id/filterSub"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Filter"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:background="@drawable/border_curved_1"
                android:drawableLeft="@drawable/ic_filter_list_black_24dp"
                />

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:id="@+id/card"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soorry No Course Available For This Category Try Another One"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cart"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear"
            >

            <View
                android:layout_width="0dp"
                android:id="@+id/view"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.080"
                />

            <android.support.v7.widget.RecyclerView
                app:layout_constraintLeft_toRightOf="@+id/view"
                app:layout_constraintWidth_percent="0.82"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_ripple"
                android:id="@+id/categoriesCourses" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>
</FrameLayout>
