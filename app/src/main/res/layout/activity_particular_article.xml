<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    tools:context=".ParticularArticleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:visibility="gone"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/particle_name"
            android:layout_marginBottom="10dp"
            />
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_below="@id/particle_name"
            />
        <ImageView
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/particle_image"
            android:layout_below="@id/particle_name"
            />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout"
            android:weightSum="10"
            android:layout_below="@+id/particle_image"
            >
            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/particle_author"
                android:drawableStart="@drawable/ic_person_black_24dp"
                />
            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/particle_author"
                android:drawableLeft="@drawable/ic_event_note_black_24dp"
                android:id="@+id/particle_created"
                />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/particle_category"
            android:layout_marginTop="10dp"
            android:layout_below="@id/layout"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:id="@+id/view"
            android:layout_below="@id/particle_category"
            />
            <WebView
                android:layout_below="@id/particle_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webview"/>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab_menu"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="#da3c21"
            />
        <include layout="@layout/fab_layout"
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fab_menu"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="163dp" />
    </RelativeLayout>
</RelativeLayout>