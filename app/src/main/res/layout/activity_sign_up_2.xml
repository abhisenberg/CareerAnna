<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/snackbar_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient_white"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/signUp_progressCircle_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/iv_ca_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/careeranna_logo_black"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:layout_height="60dp" />

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/bt_google_sign_in_button"
        android:layout_above="@id/fb_login_button_2"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:text="Login with Google"
        >
    </com.shobhitpuri.custombuttons.GoogleSignInButton>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button_2"
        android:layout_above="@id/Middle"
        android:layout_marginBottom="25dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="12dp"
        />

    <!--<View-->
        <!--android:id="@+id/Middle"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:background="@android:color/white"-->
        <!--/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/register_screen_fields_color"
        android:textStyle="bold"
        android:text="OR"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/Middle"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="@drawable/line"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view_centerCircle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:layout_height="35dp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="@drawable/line"
            android:layout_height="match_parent" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_btAndFields"
        android:layout_below="@id/Middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

</RelativeLayout>
