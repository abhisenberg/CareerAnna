<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragement.dashboard_fragements.MyCoursesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            android:id="@+id/card"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_course_added"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cart"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.SearchView
            android:textSize="14sp"
            android:paddingRight="10dp"
            android:focusableInTouchMode="true"
            app:iconifiedByDefault="false"
            app:queryHint="@string/search_your_course"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/search"
            android:layout_marginTop="10dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_below="@+id/search"
            >

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/leftArrow_myCourses"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_black1_24dp"
                />

            <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:rvp_triggerOffset="0.6"
                android:layout_gravity="center"
                app:rvp_singlePageFling="true"
                android:clipToPadding="false"
                android:id="@+id/my_courses">
            </com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager>

            <ImageView
                android:id="@+id/rightArrow_myCourses"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_arrow_right_black1_24dp"/>


        </LinearLayout>



    </RelativeLayout>

</FrameLayout>
