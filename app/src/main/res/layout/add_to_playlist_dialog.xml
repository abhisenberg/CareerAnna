<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add To"
        android:gravity="center_horizontal"
        android:id="@+id/add_to_label"
        android:textColor="@color/black"
        />

    <android.support.v7.widget.SearchView
        android:id="@+id/search"
        android:focusable="false"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:layout_below="@+id/add_to_label"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/search"
        android:id="@+id/playlist_rv"
        android:layout_above="@id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="@color/black"
        android:layout_above="@id/create_layout"
        />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/create_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:id="@+id/cancel"
        />

    <Button
        android:id="@+id/create_btn"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:text="Create new playlist"
        />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLines="1"
            android:inputType="textCapWords"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/add_btn"
            android:layout_marginRight="5dp"
            android:hint="Enter PlayList Name"
            android:id="@+id/playlist_item_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="12sp"
            android:id="@+id/add_btn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@color/sign_in_button_color"
            android:textColor="@color/white"
            android:text="Create"
            />

    </RelativeLayout>

</RelativeLayout>